@using System.Web.Mvc.Html;
@model ShoeStore.Models.IssueViewModel
@{
    ViewBag.Title = "New Issue";
}

@using (Html.BeginForm("NewIssue", "Issue", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>New Issue</h4>
    <div class="col-md-7">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
            </div>
        </div>
         <div class="form-group">
            @Html.LabelFor(m => m.description, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.description, 6, 6, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Severity, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Severity,  new SelectList(        
               ShoeStore.Models.SeverityViewModel.Severity.Select(x=> new {Text= x, Value=x }), "Value", "Text"), new { @class = "form-control" })
            </div>
        </div>
   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Submit" />
            </div>
        </div>
    </div>    
}
