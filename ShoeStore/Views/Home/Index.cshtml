@{
    ViewBag.Title = "Shoe Store: Welcome to Shoe Store";
}

<div class="navbar navbar-default">
    <div class="navbar-header" id="home_link_div">
        <button class="navbar-toggle" data-target=".navbar-responsive-collapse" data-toggle="collapse" type="button"></button>
        <a class="navbar-brand" href="Javascript:Model.Main.Home()">Home</a>
    </div>
</div>

<div class="navbar navbar-inverse" id="header_nav">
    <nav class="navbar-collapse collapse navbar-inverse-collapse">
        <ul class="nav navbar-nav">
            <li><a href="javascript:Model.Main.GetMonthShoes('January')">January</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('February')">February</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('March')">March</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('April')">April</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('May')">May</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('June')">June</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('July')">July</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('August')">August</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('September')">September</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('October')">October</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('November')">November</a></li>
            <li><a href="javascript:Model.Main.GetMonthShoes('December')">December</a></li>
            <li><a href="javascript:Model.Main.GetAllShoes()">All Shoes</a></li>
        </ul>
    </nav>
</div>

<div class="col-md-6">
        <label for="remind_email_input">Remind me of new shoes</label>
        <input id="remind_email_input" name="email" placeholder="Email Address" type="text">
        <input id="remind_email_submit" type="button" value="Submit" onclick="Model.Main.Subscribe()">
</div>
<div class="col-md-6 text-right">
        <label for="promo_code_input">Promotional Code</label>
        <input id="promo_code_input" name="promo_code" type="text">
        <input id="promo_code_submit" type="button" value="Submit" onclick="Model.Main.ApplyPromoCode()">
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <a href="javascript:Model.Main.ReportIssue()">Report An Issue</a>
        |
          <a href="javascript:Model.Main.GetIssues()">Issues</a>
    </div>
    <div class="col-md-6 text-right">
        <a class="text-right" href="javascript:Model.Main.GetProblemDefinition()">Problem Definition</a>
    </div>
</div>
<div class="col-md-4 col-md-offset-4">
    <div>
          <div  id="flash" class="flash alert-success" style="display:none"></div>
    </div>
</div>
<hr />
<div class="container-fluid " id="MainContainer">
    @if( ViewBag.Issues == true ) {
        Html.RenderPartial("../Issue/Index", ShoeStore.Models.Issue.GetIssues());
    }
    else
    {
        <div class="row text-center">
        <h2>Welcome to Shoe Store!</h2>
        <div>
            <legend class="form_heading">Pre-Order your shoes today</legend>
            <dl class="form-group">
                <dt>
                    <label class="col-md-4 control-label text-right" for="brand" style="margin-top: 10px;">Choose a brand</label>
                </dt>
                <dd class="col-md-4">
                       @Html.DropDownList("shoeBrand", ShoeStore.Models.ShoeViewModel.ShoeBrand, new { @class = "form-control" })
                </dd>
                <dd class="col-md-4 text-left">
                    <input class="button btn btn-primary" id="search_button" type="button" value="Search" onclick="Model.Main.GetBrandShoes(document.getElementById('shoeBrand').value)">
                </dd>
            </dl>
        </div>
    </div>
    }
</div>
